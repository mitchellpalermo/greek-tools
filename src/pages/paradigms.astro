---
import Layout from '../layouts/Layout.astro';
import ParadigmQuiz from '../components/ParadigmQuiz';
---

<Layout
  title="Paradigm Quiz"
  description="Quiz yourself on Greek paradigm tables — noun declensions, verb conjugations, pronouns, and more."
>
  <div class="mb-8">
    <h1
      class="text-3xl font-bold mb-1"
      style="color: var(--color-coral);"
    >
      Paradigm Quiz
    </h1>
    <p class="text-text-muted">
      Pick a paradigm, choose your difficulty, and fill in the blanks from memory.
      Uses Beta Code input — type English letters to produce Greek.
    </p>
  </div>
  <ParadigmQuiz client:load />
</Layout>
